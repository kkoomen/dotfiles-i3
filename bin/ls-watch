#!/usr/bin/env python
# Filename      : ls-watch.py
# Author        : Kim K
# Created       : Tue, 09 Feb 2016
# Last Modified : Tue, 09 Feb 2016


from sys import exit as Die
try:
  import os
  import time
except ImportError as err:
  Die(err)

def main():
  print('Waiting for new files...')
  files = os.listdir()
  i = len(files)
  while True:
    if len(os.listdir()) > i:
        for item in os.listdir():
            if not item in files:
                print('new > {0}'.format(item))

    files = os.listdir()
    i = len(files)
    time.sleep(1)


if __name__ == '__main__':
  main()
